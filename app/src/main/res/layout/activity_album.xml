<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#15151f"
    tools:context="com.rickneilson.carui.SearchActivity">

    <LinearLayout
        android:id="@+id/top_buttons"
        android:layout_width="match_parent"
        android:layout_height="250px"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <Button
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#B3E5FC"
            android:padding="20dp"
            android:text="Back" />

        <Button
            android:id="@+id/home_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#B3E5FC"
            android:padding="20dp"
            android:text="Home" />

        <Button
            android:layout_width="133dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#B3E5FC"
            android:padding="20dp"
            android:text="NowPlaying" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/textBarView"
        android:layout_width="match_parent"
        android:layout_height="210px"
        android:layout_below="@+id/top_buttons"
       >

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:background="#F0F8FF"
            android:padding="30dp"
            android:gravity="center"
            android:text="Hot Fuss" />
    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/textBarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="30dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/top_buttons"
        android:background="#D3D3D3" />
    </LinearLayout>

</RelativeLayout>